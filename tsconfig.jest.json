{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "@types/jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/vue-shim.d.ts", "src/__tests__/**/*.ts"]
}

